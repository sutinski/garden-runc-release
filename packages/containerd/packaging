#!/usr/bin/env bash
set -euo pipefail

# tar xzf containerd/containerd-1.0.2.linux-amd64.tar.gz
# cp -R bin "${BOSH_INSTALL_TARGET}"
export PKG_CONFIG_PATH=/var/vcap/packages/libseccomp/lib/pkgconfig

mkdir -p "${BOSH_INSTALL_TARGET}/src"

cp -a . "${BOSH_INSTALL_TARGET}/src/"

export GOROOT
GOROOT="$( readlink -nf /var/vcap/packages/golang )"
export GOPATH="$BOSH_INSTALL_TARGET"
export PATH="${GOROOT}/bin:${PATH}"

apt-get install -y git btrfs-tools

cd "${GOPATH}/src/github.com/containerd/containerd"
make
cp -R bin "$BOSH_INSTALL_TARGET"

